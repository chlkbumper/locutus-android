<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_concept_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:text="@string/search_concept_dialog_title"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/search_concept_dialog_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edit_concept_title_textview"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:hint="Saisir le nom du concept" />


</RelativeLayout>