<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_module_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3">


    <LinearLayout
        android:id="@+id/fragment_module_top_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fragment_module_container1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_margin="10dp"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/fragment_module_container2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/fragment_module_container3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_margin="10dp"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerInside" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_module_bottom_row"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fragment_module_container4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_margin="10dp"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerInside" />


        <ImageView
            android:id="@+id/fragment_module_container5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/fragment_module_container6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:layout_margin="10dp"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="centerInside" />

    </LinearLayout>


</LinearLayout>
